// Generator block: Specifies the Prisma client configuration

generator client {
  // Use the Prisma Client JS provider
  provider        = "prisma-client-js"
  // Enable the fullTextSearch preview feature
  previewFeatures = ["fullTextSearch"]
}

// Datasource block: Defines the database connection
datasource db {
  // Specify PostgreSQL as the database provider
  provider  = "postgresql"
  
  // Connection URL for Prisma, using connection pooling
  // The actual URL is stored in an environment variable for security
  url       = env("POSTGRES_PRISMA_URL")
  
  // Direct connection URL, not using connection pooling
  // Also stored in an environment variable
  directUrl = env("POSTGRES_URL_NON_POOLING")
}